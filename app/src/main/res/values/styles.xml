<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomRoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/corner_default_radius</item>
        <item name="cornerSizeBottomRight">@dimen/corner_default_radius</item>
    </style>

    <!--подзаголовки-->
    <style name="bold_subtitle" parent="android:Widget.TextView">
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:fontWeight">800</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_title_color</item>
    </style>

    <style name="main_color_subtitle" parent="bold_subtitle">
        <item name="android:textColor">@color/main_title_color</item>
    </style>

    <style name="opposite_color_subtitle" parent="bold_subtitle">
        <item name="android:textColor">@color/opposite_title_color</item>
    </style>

    <!--заголовки-->
    <style name="bold_title" parent="android:Widget.TextView">
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:fontWeight">800</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="main_color_title" parent="bold_title">
        <item name="android:textColor">@color/opposite_title_color</item>
    </style>

    <style name="white_color_title" parent="bold_title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="opposite_color_title" parent="bold_title">
        <item name="android:textColor">@color/main_title_color</item>
    </style>
    <!--контейнер-->
    <style name="main_container">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingHorizontal">@dimen/container_horizontal_padding</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.BottomSheet</item>
    </style>

    <style name="ShapeAppearanceOverlay.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/corner_default_radius</item>
        <item name="cornerSizeTopRight">@dimen/corner_default_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>